.commodity_screenlong {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1200;
  color: #fff;
}

.authorization {
  width: 560rpx;
  height: 550rpx;
  background-color: #fff;
  border-radius: 18rpx;
  position: fixed;
  top: 30%;
  z-index: 1000000;
  left: 13.2%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.authorization image {
  margin-top: 30rpx;
