.shop_cont{
  width: 100%;
  display: flex;
  align-items: center;
  
}
.shop_cont .shop_img{
  width:238rpx;
  height:238rpx;
  border-radius:6rpx;
  margin-right: 20rpx;
}
.shop_cont .shop_ri{
  width:400rpx;
  height:238rpx;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  align-content:space-between;
}
.shop_cont .shop_title{
  width: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.shop_cont .shop_detail{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 24rpx;
}
.shop_cont .shop_detail .shop_price{
  color: #FF0037;
  font-size: 24rpx;
  font-weight: 500;
}
.shop_cont .shop_detail .shop_price view:first-child{
  text-decoration:line-through;
  color: #999999;
  font-size: 26rpx;
  font-weight: 400;
}
.shop_cont .shop_detail .shop_btn{
  color: #FF0037;
  font-size: 22rpx;
  font-weight: 500;
}
.shop_cont .shop_detail .shop_btn .discount{
  display: flex;
  align-items: center;
}
.shop_cont .shop_detail .shop_btn image{
  width: 12rpx;
  height: 22rpx;
  margin-right: 4rpx;
}
.shop_cont .shop_detail .shop_btn .btn{
  width:132rpx;
  height:42rpx;
  background:rgba(255,0,55,1);
  border-radius:20rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 42rpx;
  text-align: center;
  font-weight: 600;
  margin-top: 16rpx;
}
