.search {
  width: 702rpx;
  height: 58rpx;
  line-height: 58rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin: 40rpx auto;
  margin-top: 0;
  display: flex;
  align-items: center;
}
.search image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx;
}
.search input {
  height: 58rpx;
  line-height: 58rpx;
  color: #fff;
  font-size: 26rpx;
  width: 100%;
}