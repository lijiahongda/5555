/* components/areaView/index.wxss */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 100;
  color: #fff;
}
.subwayKeyCell {
  padding-left: 30rpx;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.areaView {
  width: 100%;
  height: 840rpx;
  background-color: white;
  display: flex;
  position: fixed;
  padding-top: 21rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  z-index: 101;
}
.stairView {
  width: 166rpx;
  height: 840rpx;
  background-color: #f6f6f6;
}

.stairViewCell {
  font-size: 28rpx;
  color: #333;
  height: 88rpx;
  line-height: 76rpx;
  padding-left: 30rpx;
}

.stairViewCellClick {
  background-color: white;
}
.secondView {
  width: 584rpx;
  height: 840rpx;
  background-color: white;
}
.secondViewCell {
  width: 554rpx;
  padding-left: 30rpx;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  /* line-height: 88rpx; */
}
.secondViewCellName {
  font-size: 26rpx;
  color: #666;
}
.secondViewCellImage {
  width: 23rpx;
