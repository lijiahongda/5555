/* components/roomDetail/index.wxss */
view{
    box-sizing: border-box;
}

.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 100;
    color: #fff;
    box-sizing: border-box;
}

.roomInfo {
    padding-left: 4%;
    padding-right: 4%;
    padding-top: 29rpx;
    padding-bottom: 33rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 24rpx 24rpx 0rpx 0rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 101;
}

.roomInfo .title {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(36, 36, 36, 1);
    margin-bottom: 30rpx
}

.roomInfo .title image {
    width: 24rpx;
    height: 24rpx;
}

.roomInfo swiper {
    width: 100%;
    margin-bottom: 30rpx;
    height: 266rpx;
}

.roomInfo swiper .bannerimage {
    background-color: #947942;
    border-radius: 12rpx;
    height: 266rpx;
    width: 100%
}

.roomInfo swiper .roomImage {
    position: relative;
}

.roomInfo swiper .roomImage .imageCurrent {
    position: absolute;
    bottom: 19rpx;
    right: 2.3%;
    width: 118rpx;
    height: 42rpx;
    background: rgba(0, 0, 0, 0.4);
    border-radius: 21rpx;
    display: flex;
    font-size: 22rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.roomInfo swiper .roomImage .imageCurrent image {
    width: 24rpx;
    height: 20rpx;
    margin-right: 7rpx;
}

.roomInfo .base {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    border-bottom: 1px solid#DEDEDE;
    padding-bottom: 19rpx;
    margin-bottom: 35rpx;
}

.roomInfo .base .baseItem {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    display: flex;
    flex-direction: row;
    width: 50%;
    margin-bottom: 17rpx;
}

.roomInfo .base .key {
    color: #242424;
}

.roomInfo .CancellationPolicyTitle {
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(36, 36, 36, 1);
    margin-bottom: 23rpx;
}

.roomInfo .CancellationPolicy {
    display: flex;
    flex-direction: row;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(36, 36, 36, 1);
    border-bottom: 1px solid #DEDEDE;
    padding-bottom: 36rpx;
    margin-bottom: 35rpx;
    align-items: center;
}

.roomInfo .cancelled {
    width: 102rpx;
    height: 26rpx;
    background: rgba(242, 173, 83, 0.24);
    border-radius: 6rpx;
    margin-right: 19rpx;
    font-size: 18rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(242, 173, 83, 1);
    text-align: center;
    line-height: 26rpx;
}

.roomInfo .RoomFacilitiesTitle {
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(36, 36, 36, 1);
    margin-bottom: 22rpx;
}

.roomInfo .RoomFacilitiesItem {
    display: flex;
    flex-direction: row;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    min-height: 50rpx;
    align-items: center;
}

.roomInfo .RoomFacilitiesItem .tig {
    margin-right: 20rpx;
}

.roomInfo .RoomFacilitiesItem .key {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(36, 36, 36, 1);
    margin-right: 10rpx;
}