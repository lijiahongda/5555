.roominfo {
  display: flex;
  align-items: center;
  margin: 0 24rpx;
  border-bottom:1rpx solid #E7E7E7;
  padding: 24rpx 0;
  box-sizing: border-box;
}
.roominfo .roombasicinfo {
  width: 520rpx;
}
.roomimg {
  width: 160rpx;
  height: 160rpx;
  margin-right:20rpx
}
.roomname{
  width: 520rpx;
  display: flex;
  align-items: center;
}
.roomname view{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-right: 14rpx;
}
.roomname image{
  width: 12rpx;
  height: 18rpx;
}

.roomfac {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.roomfac .room_tip{
  font-size: 24rpx;
  color: #999999;
}
.roomfac .room_icon{
  display: flex;
  align-items: center;
  margin-top: 18rpx;
}
.roomfac .room_icon view{
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 8rpx;
  box-sizing: border-box;
  font-size: 20rpx;
  color: #C77C2C;
  border: 1px solid #C77C2C;
  border-radius: 2rpx;
  margin-right: 10rpx;
}



.price{ 
  display: flex;
  align-content: center;
}
.price .old_price{
  text-decoration:line-through;
  font-size: 24rpx;
  color: #666;
  text-align: right;
}
.minprice{
  display: flex;
}
.minprice .min-label {
  font-size: 24rpx;
  color: #E54045;
}
.minprice .lable-price{
  font-size: 42rpx;
  font-weight: 500;
}
.minprice .lable-qi{
  font-size: 24rpx;
  color: #666666;
  margin-top: 16rpx;
}
.price .btm-img {
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
  margin-left: 16rpx;
}






.fw_list_all{
  background: #F8F8F8;
  padding: 14rpx 24rpx;
  box-sizing: border-box;
}
.fw_list {
  width: 702rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  box-sizing: border-box;
  position: relative;
  color: #343434;
  margin-bottom: 14rpx;
  min-height: 156rpx;
}
.fw_list .vip_text{
  font-size: 24rpx;
  margin: 8rpx 0;
}
.fw_list .room_icon{
  display: flex;
  align-content: center;
}
.fw_list .room_icon view{
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 8rpx;
  background: rgba(0, 0, 0, 0);
  border: 1rpx solid #EE7E32;
  border-radius: 2rpx;
  font-size: 20rpx;
  color: #EE7E32;
  margin-right: 10rpx;
}
.fw_list .time{
  font-size: 24rpx;
  color: #47B178;
  margin: 8rpx 0;
}
.fw_list .state{
  font-size: 24rpx;
  color: #47B178;
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.fw_list .state image{
  margin-right: 10rpx;
}
.fw_list .fw_list_pos{
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
}
.fw_list_pos .oriprice text{
  font-size: 42rpx;
  font-weight: 500;
  color: #E54045;
}
.fw_list_pos .oriprice text:nth-child(1){
  font-size: 22rpx;
  font-weight: 400;
}
.fw_list_pos .rp_btn_ri{
  font-size: 20rpx;
  color: #E54045;
  margin-bottom: 10rpx;
  text-align: center;
  margin-left:24rpx ;
}
.fw_list_pos .rp_btn{
  width: 86rpx;
  height: 92rpx;
  background: linear-gradient(208deg, #E13727, #EF7342);
  border-radius: 8rpx;
  color: #fff;
  font-size: 38rpx;
  font-weight: 500;
  position: relative;
}
.fw_list_pos .rp_btn .rp_btn_b{
  width: 82rpx;
  height: 34rpx;
  background: #FFFFFF;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #EE7E32;
  top: 56rpx;
  left: 2rpx;
  position: absolute;
}