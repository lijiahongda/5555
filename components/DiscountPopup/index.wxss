/* components/DiscountPopup/index.wxss */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 100;
  color: #fff;
}

.popup {
  background-color: #fff;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  bottom: 0;
  position: fixed;
  padding-top: 35rpx;
  padding-bottom: 30rpx;
  padding-left: 4%;
  padding-right: 4%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  z-index: 101;
}

.popup .title {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(36, 36, 36, 1);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-left: 38%;
  width: 98%;
  margin-bottom: 68rpx;
}

.popup .title image {
  width: 24rpx;
  height: 24rpx;
}

.popup .item,
.popup .roomRateItem {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 23rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.roomRateItem .key,
.roomRateItem .value {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(36, 36, 36, 1);
}

.popup .item .key {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.popup .item .value {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.popup .roomRateItem .Lupay {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(236, 69, 67, 1);
}

.popup .border {
  width: 100%;
  height: 1px;
  background-color: #DEEDDE;
  margin-bottom: 42rpx;
  margin-top: 15rpx;
}

.popup .lookDetail {
  width: 310rpx;
  height: 66rpx;
  border-bottom: 50rpx;
  border: 1px solid #DEDEDE;
  line-height: 66rpx;
  text-align: center;
  border-radius: 50rpx;
  font-size: 33rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(36, 36, 36, 1);
}