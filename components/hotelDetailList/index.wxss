/* components/hotelDetailList/index.wxss */

.content {
    /* background-color: #F9F8F8; */
    padding-bottom: 30rpx;
    border-bottom-right-radius: 18rpx;
    border-bottom-left-radius: 18rpx;
}

.roomsTypes {
    border-radius: 12rpx ;
    background-color: #fff;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    padding-left: 3.2%;
    padding-right: 3.2%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.roomsTypes .image {
    width: 29%;
    height: 193rpx;
    position: relative;
    margin-right: 3.2%;
}

.roomsTypes .image image {
    width: 100%;
    height: 100%;
    background-color: #f9f8f8ff;
    border-right: 12rpx;
}

.roomsTypes .Info {
    display: flex;
    flex-direction: column;
    width: 67%;
}

.roomsTypes .Info .title {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(36, 36, 36, 1);
    margin-bottom: 17rpx;
}

.roomsTypes .Info .title .OnlinePay {
    width: 96rpx;
    height: 26rpx;
    background: rgba(238, 238, 238, 1);
    border-radius: 6rpx;
    font-size: 18rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    line-height: 26rpx;
    text-align: center;
}

.roomsTypes .Info .element {
    font-size: 22rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    margin-bottom: 18rpx;
}

.roomsTypes .Info .element text {
    word-break: break-all;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
}

.roomsTypes .Info .label {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 23rpx;
}

.roomsTypes .Info .label view {
    padding-left: 16rpx;
    padding-right: 16rpx;
    line-height: 26rpx;
    height: 26rpx;
    border-right: 6rpx;
    font-size: 18rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(242, 173, 83, 1);
    margin-right: 12rpx;
}

.roomsTypes .Info .price {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    font-size: 36rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(236, 69, 67, 1);
}

.roomsTypes .Info .price image {
    width: 20rpx;
    height: 20rpx;
    margin-left: 11rpx;
}

.rpList {
    width: 93.6%;
    /* background: rgba(249, 248, 248, 1); */
    border-radius: 18rpx;
    margin-left: 3.2%;
    margin-right: 3.2%;
}

.rpList .list {
    height: 124rpx;
    width: 93.6%;
    margin-left: 3.2%;
    margin-right: 3.2%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    border-radius: 12rpx;
}

.rpList .list .rpInfo {
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(36, 36, 36, 1);
    width: 77%;
}

.rpList .list .rpInfo text {
    word-break: break-all;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    text-overflow: ellipsis;
}

.rpList .list .rpInfo .isCancel {
    font-size: 20rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    display: flex;
    flex-direction: row;
    align-items: center;
}

.rpList .list .rpInfo .isCancel .WithoutBreakfast {
    font-size: 20rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(175, 226, 101, 1);
    margin-left: 13rpx;
}

.rpList .list .rpInfo .isCancel .supplier {
    color: #51a0f8ff;
    margin-right: 12rpx;
}

.rpList .list {
    /* border-bottom: 1rpx solid #F3F3F3; */
}

.rpList .list .rpPrice {
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(236, 69, 67, 1);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    width: 47%;
}

.rpList .list .rpPrice text {
    /* font-size: 18rpx; */
    font-family: PingFang SC;
    font-weight: 400;
    /* color: rgba(153, 153, 153, 1); */
}

.rpList .list .rpPrice .OrderOnline {
    width: 80rpx;
    height: 70rpx;
    border-radius: 6rpx;
    margin-left: 7%;
}
