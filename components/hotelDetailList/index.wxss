/* 是否开通会员 */
.accessMember {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .6);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
  }
  .accessMember > view{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    transform: translate(0 , -100rpx);
    width: 560rpx;
    height: 700rpx;
    text-align: right;
  }
  .accessMember .close{
    width: 58rpx;
    height: 58rpx;
  }
  .accessMember .detail{
    width: 560rpx;
    height: 650rpx;
    background-image: url(https://yuetao-1300766538.cos.ap-beijing.myqcloud.com/yuetao/image/2020-07-31/15/yuelvhuirCf4g79zJu1596179712.png);
    margin-top: 40rpx;
    background-size: 100% 100%;
    color: #333333;
    font-size: 28rpx;
    padding-top: 2rpx;
    text-align: left;
  }
  .accessMember .detail > view{
    padding: 0 52rpx;
  }
  .accessMember .detail .header{
    color: #FFFFFF;
    font-size: 40rpx;
    line-height: 1;
    text-align: center;
    margin-top: 52rpx;
  }
  .accessMember .detail .tip{
    line-height: 1;
    margin-top: 160rpx;
    margin-bottom: 34rpx;
  }
  .accessMember .detail .note{
    color: #E33F44;
    margin-top: 24rpx;
  }
  .accessMember .detail .button{
    padding: 0 30rpx;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    margin-top: 64rpx;
  }
  
  .accessMember .detail .button view{
    width: 240rpx;
    height: 86rpx;
    border-radius: 44rpx;
    text-align: center;
    line-height: 86rpx;
    background: #F2F2F2;
    color: #666666;
    font-size: 30rpx;
  }
  .accessMember .detail .button view:nth-child(2){
    background: linear-gradient(#e43f44 0%, #ff5f4c 100%);
    color: #FFFFFF;
  }