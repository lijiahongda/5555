
.banner{
  width:702rpx;
  height:300rpx;
  border-radius:18rpx;
  overflow: hidden;
  position: relative;
  margin: 20rpx 24rpx;
  margin-top: 50rpx
}
.banner .swiper-box{
  height: 300rpx;
}
.banner .swiper-box .image {
  width: 100%;
  height: 300rpx;
  display: block;
  border-radius:18rpx;
}
.banner .dot{
  width: 10rpx;
  height: 10rpx;
  margin: 0 3rpx;
  background-color: #fff;
  
  display: inline-block;
  border-radius: 50%;
}
.banner .bannerDots{
  width: 100%;
  left: 0;
  text-align: center;
  position: absolute;
  bottom: 20rpx;
}
.dot.active{
  width: 16rpx;
  border-radius: 10rpx;
  /* background: #C9261A; */
}