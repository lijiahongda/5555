.poster-mask{
    position: fixed;
    z-index: 99999;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background: #333;
    opacity: 0.6;
  }
  .poster-wrapper{
    position: fixed;
    z-index: 100000;
    bottom:0;
    width: 100%;
  }
  

.moveT{
  animation: moveTop 500ms ;
}
@keyframes moveTop{
  from{bottom: -600rpx;}
  to{bottom: 0;}
}

  .poster-wrapper{
      background: #fff;
  }
  .scroll-box{
      height: 500rpx;
  }
  .scroll-box .li-s{
      display: flex;
      justify-content: space-between;
        align-items: center;
      line-height: 88rpx;
      padding: 0 20rpx;
      box-sizing: border-box;
  }
  .header_tap{
      display: flex;
      margin: 0 30rpx;
      height: 88rpx;
      line-height: 88rpx;
      color: res;
      border-bottom: 1px solid #dddddd;
  }
  .header_tap view{
    margin:0 30rpx 0 0;
  }
  .li-img{
      width: 32rpx;
      height: 32rpx;
      display: block;
  }
  .btn-header{
    display: flex;
    padding:0 20rpx;
    box-sizing: border-box;
    justify-content: space-between;
    font-size: 28rpx;

  }
  .btn-header-p{
    width: 100rpx;
    line-height: 88rpx;
    font-size: 30rpx;
  }
  .btn-header-p-ac{
    color: red;
    text-align: right;
  }
  .btn-header-p-ac image{
    width: 32rpx;
    height: 32rpx;
  }