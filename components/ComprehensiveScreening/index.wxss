/* components/ComprehensiveScreening/index.wxss */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 100;
  color: #fff;
}
.areaView {
  width: 100%;
  height: 840rpx;
  background-color: white;
  display: flex;
  position: fixed;
  display: flex;
  flex-direction: column;
  z-index: 101;
}
.areaView .cont{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.stairView {
  width: 166rpx;
  height: 840rpx;
  background-color: #f6f6f6;
}
.secondViewCellNameClick {
  /* color: rgb(255, 96, 50); */
  background: #fff;
  color: #FF4949;
}
.stairViewCell {
  font-size: 28rpx;
  color: #333;
  height: 88rpx;
  line-height: 76rpx;
  padding-left: 30rpx;
}

.stairViewCellClick {
  background-color: white;
}
.conditionsView {
  width: 584rpx;
  height: 690rpx;
  background-color: white;
}

.conditions {
  margin-left: 10rpx;
  margin-bottom: 10rpx;
  width:134rpx;
  height:50rpx;
  line-height: 50rpx;
  background:rgba(243,243,243,1);
  border-radius:3rpx;
  font-size: 26rpx;
  color: #191919;
  text-align: center;
  margin-right: 12rpx;
  border:1px solid rgba(243,243,243,1);
}
.emptyConfirmView {
  width: 100%;
  height: 90rpx;
  display: flex;
  border-top: 1rpx solid rgba(220,220,220,1);
  margin-top: 40rpx;
}

.empty {
  width: 50%;
  height: 88rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333333;
  background-color: white;
  margin-top: 2rpx;
}

.confirm {
  width: 50%;
  text-align: center;
  line-height: 90rpx;
  height: 90rpx;
  background-color: rgba(255,73,73,1);
  font-size: 30rpx;
  color: #fff;
}