.commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 100;
    color: #fff;
    box-sizing: border-box;
}

.roomInfo {
    padding: 0 24rpx;
    padding-top: 20rpx;
    padding-bottom: 33rpx;
    background: #F8F8F8;
    border-radius: 20rpx 20rpx 0rpx 0rpx;
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 101;
    box-sizing: border-box;
    height: 80%;
    overflow-y: auto;
}

.roomInfo .title {
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #333333;
    margin-bottom: 20rpx;
    text-align: center;
}

.roomInfo .title image {
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    right: 34rpx;
    top: 18rpx;
}

.roomInfo swiper {
    width: 100%;
    margin-bottom: 30rpx;
    height: 310rpx;
}

.roomInfo swiper .bannerimage {
    background-color: #947942;
    border-radius: 12rpx;
    height: 310rpx;
    width: 100%
}

.roomInfo swiper .roomImage {
    position: relative;
}

.roomInfo swiper .roomImage .imageCurrent {
    position: absolute;
    bottom: 19rpx;
    right: 2.3%;
    width: 118rpx;
    height: 42rpx;
    background: rgba(0, 0, 0, 0.4);
    border-radius: 21rpx;
    display: flex;
    font-size: 22rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.roomInfo swiper .roomImage .imageCurrent image {
    width: 24rpx;
    height: 20rpx;
    margin-right: 7rpx;
}

.roomInfo .Facilities{
    width: 700rpx;
    background: #FFFFFF;
    border-radius: 16rpx;
    font-size: 24rpx;
    color: #333333;
    padding: 24rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}
.roomInfo .Facilities .titles{
    font-weight: 500;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}
.roomInfo .Facilities .f_icon{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}
.roomInfo .Facilities .f_icon .f_list{
    width: 33%;
    display: flex;
    align-items: center;
    margin-bottom:10rpx;
}
.roomInfo .Facilities .f_icon image{
    width: 24rpx;
    height: 24rpx;
    margin-right: 14rpx;
}



.roomInfo .base {
    padding-bottom: 10rpx;
    margin-top: 22rpx;
}

.roomInfo .base .baseItem {
    font-size: 24rpx;
    font-weight: 500;
    color: #999999;
    display: flex;
    margin-bottom: 16rpx;
}
.roomInfo .base .baseItem view{
    width: 110rpx;
}
.roomInfo .base .baseItem .key {
    color: #111111;
    font-weight: 400;
    width: 500rpx;
}

.roomInfo .CancellationPolicyTitle {
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(36, 36, 36, 1);
    margin-bottom: 23rpx;
}

.roomInfo .CancellationPolicy {
    font-size: 24rpx;
    font-family: PingFang SC;
    color: rgba(36, 36, 36, 1);
}
.roomInfo .CancellationPolicy .title1{
    font-weight: 500;
    color: #333333;
    margin-bottom: 10rpx;
}

.roomInfo .cancelled {
    width: 102rpx;
    height: 26rpx;
    background: rgba(242, 173, 83, 0.24);
    border-radius: 6rpx;
    margin-right: 19rpx;
    font-size: 18rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(242, 173, 83, 1);
    text-align: center;
    line-height: 26rpx;
}

.roomInfo .RoomFacilitiesTitle {
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: rgba(36, 36, 36, 1);
    margin-bottom: 22rpx;
}

.roomInfo .RoomFacilitiesItem {
    display: flex;
    flex-direction: row;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
    min-height: 50rpx;
    align-items: center;
}

.roomInfo .RoomFacilitiesItem .tig {
    margin-right: 20rpx;
}

.roomInfo .RoomFacilitiesItem .key {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(36, 36, 36, 1);
    margin-right: 10rpx;
}


.bot{
    display: flex;
    align-items: center;
    justify-content: space-between;

}
.bot .bot_le .price{
    font-size: 40rpx;
    color: #E43F44;
}
.bot .bot_le .surplus{
    background: linear-gradient(118deg, #E03626, #EE7241);
    border-radius: 6rpx;
    font-size: 20rpx;
    color: #FFFFFF;
    padding: 6rpx 12rpx;
}
.bot .bot_ri{
    width: 240rpx;
    height: 88rpx;
    line-height: 88rpx;
    background: linear-gradient(208deg, #E03626, #EE7241);
    border-radius: 8rpx;
    color: #fff;
    font-size: 38rpx;
    text-align: center;
}
