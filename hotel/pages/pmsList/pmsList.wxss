page{
  background: #F8F8F8;
}
.top{
  width: 702rpx;
  background: rgba(228,63,68,0.1);
  border-radius: 10rpx;
  margin: 24rpx auto;
  padding: 14rpx 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #E43F44;
  display: flex;
  align-items: flex-start;
}
.top image{
  width: 22rpx;
  height: 22rpx;
  margin-right: 12rpx;
}
.recommend-cot {
  background: #fff;
  padding: 20rpx;
  border-radius: 26rpx;
  box-sizing: border-box;
  width: 96%;
  margin: 15rpx auto;
  display: flex;
  justify-content: space-between;
}

.hotel-cot {
  width: 67%;
}

.hotel-cot-pic {
  margin-top: 14rpx;
}

.hotel-cot-pic-r {
  display: inline-block;
  border-radius: 0 10rpx 10rpx 0;
}



.hotel-pic image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
}

.hotel-cot {
  width: 67%;
  position: relative;
  margin-left: 20rpx;
}

.hotel-cot-title {

  white-space: nowrap;
  /* 规定文本是否折行 */
  overflow: hidden;
  /* 规定超出内容宽度的元素隐藏 */
  text-overflow: ellipsis;
  height: 32px;
}


.hotel-cot-pic image {
  width: 120rpx;
  height: 40rpx;
  margin-right: 3rpx;
  vertical-align: middle;
}

.hotel-cot .hotel-cot-pic-bg {
  color: #fceedb;
  font-size: 21rpx;
  /* font-weight:600 ; */
  line-height: 40rpx;
  display: inline-block;
  border-radius: 0 5px 5px 0;
  width: 120rpx;
  text-align: center;
  vertical-align: middle;
  background: url(https://yuetao-1300766538.cos.ap-beijing.myqcloud.com/yuetao/image/2020-07-02/16/yuelvhuie0hvEiTFkP1593678699.png);
}

