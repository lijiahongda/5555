.hotel-cot-bottom {
  position: absolute;
  left: 280rpx;
  top: 50rpx;
  text-align: right;
}

.hotel-cot .hotel-cot-bottom view {
  width: 50%;
}

.hotel-cot-bottom .min-price {
  margin-bottom: 3rpx;
  margin-left: 100rpx;
  color: #999999;
  text-decoration: line-through;
}

.min-price text {
  text-align: right;
}

.hotel-cot .hotel-cot-bottom text {
  font-size: 12px;
}

.btm-hyzj {
  position: absolute;
  right: -8rpx;
  bottom: 0rpx;
  /* width: 243rpx; */
  padding: 4rpx 20rpx;
  text-align: center;
  background: #FD411D;
  border-radius: 30rpx;
  height: 30rpx; 
  color: #C19750;
  line-height: 30rpx;
  font-size: 22rpx;
  display: inline-block;
}
.btm-hyzj text{
  color: #fff;
}



.hotel-cot .hotel-cot-bottom .price {
  width: 100%;
  margin-left: 20rpx;
  vertical-align: middle;
}

