.hotel-cot .hotel-cot-adderss {
  margin-top: 10rpx;
}

.hotel-cot .hotel-cot-adderss image {
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}

.hotel-cot .hotel-cot-adderss text {
  color: #ccc;
}

.hotel-cot-zdbt {
  width: 90rpx;
  border: 1rpx solid #F6273C;
  border-radius: 10rpx; 
  height: 30rpx;
  margin-top: 20rpx;
  padding:4rpx 7rpx;
}

.hotel-cot-zdbt text {
  display: block;
  font-size: 22rpx;
  color: #F6273C;
  line-height: 30rpx;
  margin-top: 0rpx;
}

.hotel-cot-lm_zj {
  padding: 0rpx 5rpx;
  display: inline-block;
  width: auto;
  overflow: hidden;
  border: 1rpx solid #C19750;
  border-radius: 10rpx;
  height: 30rpx;
  color: #C19750;
  line-height: 30rpx;
  font-size: 22rpx;
}

