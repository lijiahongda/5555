/* page/HotelOther/pages/keyWordView/keyWordView.wxss */
page {
  background-color: #F9F8F8;
}

.titleHead {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  background-color: rgba(249, 248, 248, 1);
  position: fixed;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 507rpx;
  margin: 0 auto;
  margin-left: 27rpx;
  top: 0;
  padding-bottom: 21rpx;
  z-index: 102;
  margin-bottom: 38rpx;
}

.search {
  width: 80%;
  height: 60rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;

}

.search image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 4%;
  margin-right: 1%;
}

.HistoricalRecord {
  display: flex;
  flex-direction: column;
  width: 697rpx;
  margin: 0 auto;
  margin-bottom: 29rpx;
}

.HistoricalRecord .title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(36, 36, 36, 1);
  margin-bottom: 6rpx;
}

.HistoricalRecord .hotContent {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.HistoricalRecord .hotContent view {
  height: 54rpx;
  padding-left: 41rpx;
  padding-right: 41rpx;
  border-radius: 27rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(36, 36, 36, 1);
  background-color: #fff;
  margin-top: 18rpx;
  line-height: 54rpx;
  margin-right: 12rpx;
}

.Category {
  width: 697rpx;
  margin: 0 auto;
}

.Category .title {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(36, 36, 36, 1);
  margin-bottom: 24rpx;
  justify-content: space-between;
}

.Category .title image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 12rpx;
  background-color: #eee;
}

.Category .title .left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.Category .title .more {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.Category .title .more image {
  width: 10rpx;
  height: 18rpx;
  margin-left: 4rpx;
}

.Category .Content {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.Category .Content .item {
  /* width: 20%; */
  padding-left: 2%;
  padding-right: 2%;
  height: 54rpx;
  background-color: #fff;
  border-radius: 27rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(36, 36, 36, 1);
  line-height: 54rpx;
  margin-bottom: 18rpx;
  margin-right: 5%;
}

.Category .Content .item text {
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}