/* hotel/pages/hotelInfo/hotelInfo.wxss */
page {
  background-color: #F9F8F8;

}

.Header {
  position: fixed;
  left: 4%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 57%;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(36, 36, 36, 1);
}

.first {
  margin-top: 22rpx;
  border-radius: 13rpx;
  background: #fff;
}

.first view:last-child {
  border-bottom: none;
}

.Header image {
  width: 20rpx;
  height: 35rpx
}

.content {
  padding-left: 4%;
  padding-right: 4%;
}

.content .Nickname {
  padding-left: 4%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  border-bottom: 1px solid #eeeeee;
}

.content .Nickname view {
  color: #666666;
  width: 168rpx;
}

input {
  width: 65%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  margin-left: 10rpx;
}


.content .tips {
  font-size: 22rpx;
  color: #EC4543;
  margin: 16rpx 32rpx;
}

.content .btn {
  width: 630rpx;
  height: 66rpx;
  line-height: 66rpx;
  background: rgba(236, 69, 67, 1);
  border-radius: 33rpx;
  margin: 0 auto;
  margin-top: 120rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  text-align: center;
  color: #FFFFFF;
}