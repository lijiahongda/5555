/* hotel/pages/hotelCheck/hotelCheck.wxss */
page {
  background-color: #F9F8F8;

}

.Header {
  position: fixed;
  left: 4%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 57%;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(36, 36, 36, 1);
}

.Header image {
  width: 20rpx;
  height: 35rpx
}

.content {
  padding-left: 4%;
  padding-right: 4%;
}

.banner {
  width: 697rpx;
  height: 213rpx;
  border-radius: 18rpx;
  margin-bottom: 53rpx;
  margin-top: 20rpx;
}

.cont .title {
  font-size: 28rpx;
  color: #242424;
  line-height: 28rpx;
  margin-bottom: 29rpx;
  font-weight: 600;
}

.cont .item {
  width: 697rpx;
  height: 78rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eeeeee
}

.cont .first {
  background: #ffff;
  width: 697rpx;
  border-radius: 13rpx;

}

.cont .item .key {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  font-size: 24rpx;
  font-weight: 400;
  color: #242424;
  width: 80%;
}

.cont .item .key image {
  width: 11rpx;
  height: 20rpx;
  margin-left: 11rpx;
}

.cont .item button {
  text-align: right;
}

.cont .result {
  color: #242424;
  width: 697rpx;
  min-height: 78rpx;
  font-size: 24rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.cont .result .list_title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cont .result input {
  width: 86%;
  line-height: 78rpx;
  height: 78rpx;
}

.cont .result .list {
  font-size: 24rpx;
  color: #666666;
  line-height: 60rpx;
  border-top: 1rpx solid #DEDEDE;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.cont .tips {
  font-size: 22rpx;
  color: #EC4543;
  margin-top: 18rpx;
  margin-left: 30rpx;
}

.btn {
  width: 630rpx;
  height: 66rpx;
  background: rgba(236, 69, 67, 1);
  border-radius: 32rpx;
  line-height: 66rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  text-align: center;
  margin: 0 auto;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
}

.commodity_screenlong {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1200;
  color: #fff;
}

.commodity_attr_boxlong {
  width: 100%;
  overflow: hidden;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10000;
  padding-top: 20rpx;
  height: 56%;
  background-color: #fff;
  overflow: scroll;
}

.commodity_attr_boxlong .title {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #333;
  font-size: 36rpx;
  margin-bottom: 35rpx;
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
}

.commodity_attr_boxlong .item {
  border-bottom: 1px solid #ededed;
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
  padding-bottom: 20rpx;
  color: #ff6032;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
}

.commodity_attr_boxlong .item view {
  margin-right: 30rpx;
}

.commodity_attr_boxlong .title image {
  width: 30rpx;
  height: 30rpx;
}

.commodity_attr_boxlong .region {
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
}

.commodity_attr_boxlong .region .regionList {
  display: flex;
  flex-direction: row;
  color: #333;
  font-size: 24rpx;
  margin-bottom: 40rpx;
  align-items: center;
}

.commodity_attr_boxlong .region .regionList .active {
  color: #ff6032;
}

.commodity_attr_boxlong .region .regionList image {
  width: 28rpx;
  height: 20rpx;
  margin-left: 20rpx;
}