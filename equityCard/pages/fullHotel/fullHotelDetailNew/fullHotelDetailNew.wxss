@import "/components/wxParse/wxParse.wxss";
page{
  background: #f8f8f8;
}
.newtop{
  background: #fff;
display: flex;
align-items: center;
padding-left: 290rpx;
justify-content: space-between;
padding-bottom: 20rpx;

}
.navtab{
display: flex;
justify-content: flex-end;
margin-right: 5rpx;

}
.navtab image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;

}
.box{
  padding:0 2% ;
  background: #fff;
border-radius: 20rpx;

}
.box_title{
  margin-left: 32rpx;
padding-top: 32rpx;
font-size: 32rpx;
font-weight: 600;

}
.Hoteldetail {
  background-color: #fff;
  border-radius: 12rpx;
  height: 122rpx;
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 18rpx;
}

.Hoteldetail .title {
  padding-left: 4%;
  padding-right: 4%;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(36, 36, 36, 1);
  margin-bottom: 23rpx;
}

.Hoteldetail .PracticeTime {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  padding-left: 4%;
  padding-right: 4%;
}

.Hoteldetail .InOutTime {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  padding-left: 4%;
  margin-bottom: 17rpx;
}

.FacilitiesList {
  border-radius: 12rpx;
  background-color: #fff;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  padding-left: 4%;
  padding-right: 4%;
  margin-bottom: 18rpx;
  margin-top: 49rpx;
}

.FacilitiesList .title {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(36, 36, 36, 1);
  margin-bottom: 29rpx;
}

.FacilitiesList .title image {
  width: 27rpx;
  height: 27rpx;
  margin-right: 20rpx;
}

.FacilitiesList .FacilitiesListcontent {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  padding-left: 47rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.FacilitiesList .FacilitiesListcontent view {
  width: 33%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 19rpx;
}
/* tab切换 */
 .tabs {
  width: 100%;
  height: 88rpx;
  display: flex;
  background: #fff;
}

  .tabs .tab {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #10141A;
  position: relative;
  margin:0 32rpx
}

 .tabs .active::before {
  content: "";
  display: block;
  position: absolute;
  bottom: 18rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #FF001C;
}
