.actives{
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .city{
  width: 630rpx;
  margin: 0 auto;
  height: 134rpx;
  line-height: 134rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  
  border-bottom: 1rpx solid #EEEEEE;
  padding: 0 56rpx;
  box-sizing: border-box;
}
.content .city view{
  font-size: 42rpx;
  color: #2D2D2D;
}
.content .city image{
  width: 44rpx;
  height: 44rpx;
}
.content .date{
  height: 120rpx;
  line-height: 120rpx;
  font-size: 22rpx;
  color: #7C7C7C;
  width: 630rpx;
  padding: 0 26rpx;
  box-sizing: border-box;
  display: flex;
  align-content: center;
  border-bottom: 1rpx solid #EEEEEE;
}
.content .date .time{
  margin: 0 22rpx;
  font-size: 38rpx;
  color: #2D2D2D;
}
.content .btn{
  width:650rpx;
  height:88rpx;
  background:linear-gradient(0deg,rgba(255,86,84,1) 0%,rgba(247,48,55,1) 100%);
  border-radius:10rpx;
  text-align: center;
  font-size: 34rpx;
  color: #fff;
  line-height: 88rpx;
  margin: 42rpx auto 32rpx;
}
.content .history{
  font-size: 22rpx;
  color: #A5A5A5;
  display: flex;
  align-items: center;
  padding-left: 38rpx;
}
.content .history image{
  width: 20rpx;
  height: 19rpx;
  margin-left: 24rpx;
  margin-right: 10rpx;
}
.alert-mask {
 width: 100%;
