/* equityCard/pages/TrainTickets/vehicleSelect/vehicleSelect.wxss */
page{
  background: #F0F2F1
}
.time{
  position: fixed;
  width: 750rpx;
  height: 92rpx;
  line-height: 92rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(0deg,rgba(255,86,84,1) 0%,rgba(252,68,71,1) 100%);
}
.calender{
  width:301rpx;
  height:64rpx;
  line-height: 64rpx;
  background:rgba(255,255,255,1);
  border-radius:5rpx;
  color: #F7343A;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.calender image{
  width:32rpx;
  height:30rpx;
  margin-left: 22rpx;
}

.list{
  width: 750rpx;
  /* height: 225rpx; */
  background: #fff;
  margin-bottom: 10rpx;
  /* padding: 0 38rpx; */
  box-sizing: border-box;
  border-bottom: 1px solid rgba(238,238,238,1);
}
.list_itme{
  width: 675rpx;
  height: 124rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  margin: 0 38rpx;
  justify-content: space-between;
  border-bottom: 1px solid rgba(238,238,238,1);
}
.list_itme .icon{
  width:26rpx;
  height:25rpx;
  margin-right: 10rpx;
}
.list_itme .train{
  display: flex;
  align-items: center;
}
.list_itme .train .train_number,.list_itme .train .start_city,.list_itme .train .reach,.list_itme .train .end_city{
  width: 162rpx;
}
.list_itme .train .train_number{
  font-size: 40rpx;
  color: #2D2D2D
}
.list_itme .train .start_city,.list_itme .train .end_city{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #2D2D2D
}
.list_itme .train .reach{
  font-size: 20rpx;
  color: #2D2D2D;
  text-align: center;
}
.list_itme .train .reach image{
  width: 120rpx;
  height: 14rpx;
}
.list_itme .train .end_time{
  font-size: 26rpx;
  color: #FE5452
}
.list_itme .more{
  width: 18rpx;
  height: 11rpx;
}

.list .list_seat{
  width: 675rpx;
  margin: 0 38rpx;
  font-size: 26rpx;
  color: #2D2D2D;
  display: flex;
  align-items: center;
  flex-wrap: wrap;  
  justify-content: space-between;
  padding: 16rpx 0;
  line-height: 40rpx;
}
.list .list_seat view{
  width: 28%;
}


.list .list_cont .list_con_head{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width:750rpx;
  height:60rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background:rgba(238,238,238,1);
}
.list .list_cont .list_con_head view,.list .list_cont .list_cont_list view{
  width: 20%;
  text-align: center;
}
.list .list_cont .list_cont_list{
  width: 710rpx;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1);
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list .list_cont .list_cont_list:last-child{
  border-bottom: none
}
.listTitle{
  height:100vh;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:24rpx;
}