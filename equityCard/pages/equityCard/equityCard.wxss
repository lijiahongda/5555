  -webkit-text-fill-color:transparent;
  margin-right: 16rpx;
}



.equity_for {
  display: flex;
  margin-top: 56rpx;
  justify-content: center;
}

.equity_sanfang {
  width: 20%;
  text-align: center;
  position: relative;
}

.equity_sanfang .equity_img {
  width: 90rpx;
  height: 90rpx;

}



.redbaglist {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  background: #F4EDE6;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  padding-bottom: 0;
  margin-bottom: 20rpx;
}
.scroll-view-item_H {
  font-size: 28rpx;
  width: 324rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  color: #333333;
}

.vidlist_image image {
  width: 324rpx;
  height: 324rpx;
}

.price {
  width: 100%;
  padding: 0 14rpx;
  font-size: 28rpx;
  color: #333333;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  box-sizing: border-box;
}

.old_price {
  width: 100%;
  padding: 0 14rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  color: #E33F43;
  padding-bottom: 12rpx;
  display: flex;
  align-items: center;
}
.old_price image{
  width: 104rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.old_num {
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
  text-decoration: line-through;
  margin-left: 8rpx;
}

