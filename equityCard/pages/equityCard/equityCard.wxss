page {
  background: #080707;
}

.image_top {
  width: 750rpx;
  height: 770rpx;
  background: url(http://image.zhiding365.com/2020/8/24/54b2da98-c6f4-4d28-bacb-6b40c2203b45.png);
  background-size: 750rpx 770rpx;
  background-repeat: no-repeat;
  position: relative;
}

.image_top .title {
  position: absolute;
  bottom: 246rpx;
  width: 100%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.image_top .title text{
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
