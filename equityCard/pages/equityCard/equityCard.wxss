  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  margin: 0 auto;
  width: 262rpx;
}

.image_top image {
  width: 20rpx;
  height: 24rpx;
  margin-right: 8rpx;
}
.lockImg {
  position: absolute;
  bottom: 38rpx;
  right: 30rpx;
  width: 42rpx;
  height: 42rpx;
}
.equityCard_hot {
  width:702rpx;
  height:349rpx;
  background:rgba(26,25,22,1);
  border-radius:20rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(251,223,207,1);
  padding: 60rpx 0 50rpx 0;
  box-sizing: border-box;
}
.equityCard_hot .equity_text {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  width: 100%;
  font-size:26rpx;
  font-weight:400;
  color:rgba(251,223,207,1);
}
.equityCard_hot .equity_text view:nth-child(1){
  font-size:36rpx;
  font-weight:600;
  color:rgba(251,223,207,1);
