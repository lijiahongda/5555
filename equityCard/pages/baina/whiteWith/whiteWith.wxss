page{
  background: #960505;
  padding-bottom: 50rpx;
  min-height: 100%;
}
.content{
  min-height: 100%;
}
.backImage{
  width: 100%;
  height: 842rpx;
}
.titleImage{
  width: 325rpx;
  height: 66rpx;
  display: block;
  margin: 20rpx auto 30rpx auto;
}
.list{
  width: 690rpx;
  height: 266rpx;
  background: #fff;
  border-radius: 18rpx;
  margin: 0 auto;
  margin-top: 18rpx;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
}
.list > image{
  width: 218rpx;
  height: 218rpx;
  margin-right: 22rpx;
}
.list .right{
  position: relative;
  height: 100%;
  width: 380rpx;
}
.list .right .title{
  color: #242424;
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.list .right .desc{
  color: #666666;
  font-size: 22rpx;
  line-height: 1;
  margin-top: 22rpx;
}
.list .right .price{
  width: 100%;
  height: 40rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  color: #EC4543;
  font-size: 22rpx;
}
.list .right .price > text:nth-child(2){
  font-size: 36rpx;
}
.list .right .price > view{
  position: absolute;
  top: 0;
  right: 0;
  width: 144rpx;
  height: 40rpx;
  background: #EC4543;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 20rpx;
}