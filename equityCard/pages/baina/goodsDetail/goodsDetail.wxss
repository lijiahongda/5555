@import "/wxParse/wxParse.wxss";
page{
  background: rgba(249,248,248,1);
  width: 100%;
  overflow-x: hidden;
}
.banner{
  width: 100%;
  height: 750rpx;
  position: relative;
  background: #999;
}
.banner swiper,.banner swiper-item,.banner swiper-item > image{
  width: 100%;
  height: 100%;
  display: block;
}
.banner .progress{
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  background:rgba(0,0,0,.4);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 22rpx;
  height: 42rpx;
  padding: 0 20rpx;
  border-radius: 22rpx;
}
.banner .progress > image{
  width: 24rpx;
  height: 20rpx;
  margin-right: 4rpx;
}
.title{
  color: #242424;
  font-size: 36rpx;
  margin-top: 30rpx;
  /* padding: 0 30rpx; */
}
.title image{
  width: 36rpx;
  height: 36rpx;
}
.price{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  color: #EC4543;
  font-size: 28rpx;
  display: flex;
  align-items: baseline;
  margin-top: 6rpx;
}
.price > text:nth-child(2){
  font-size: 42rpx;
}
.price > text:nth-child(3){
  color: #242424;
  font-size: 22rpx;
  padding-left: 36rpx;
}
.sku{
  width: 690rpx;
  height: 78rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  color: #242424;
  font-size: 28rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  border-radius:18rpx;
}
.sku > view{
  width: 530rpx;
  color: #EC4543;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.sku > image{
  width: 11rpx;
  height: 20rpx;
}
.detail{
  width: 100%;
  margin-top: 60rpx;
}
.detail .header{
  text-align: center;
  line-height: 1;
  font-size: 30rpx;
  color: #242424;
  margin-bottom: 22rpx;
}
.detail image{
  width: 100% !important;
}
.footer{
  width: 630rpx;
  height: 66rpx;
  position: fixed;
  bottom: 40rpx;
  left:0;
  right:0;
  margin:0 auto;
  background: #EC4543;
  border-radius: 33rpx;
  text-align: center;
  line-height: 66rpx;
  color: #fff;
  font-size: 30rpx;
}
.noBuy{
  background: #999;
  color: #fff;
}