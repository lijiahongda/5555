page {
    background-color: rgb(248, 248, 248);
}

.orderpage .tip {
    padding: 0 30rpx;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #FFEDED;
    color: #E33F44;
    font-size: 22rpx;
    text-align: center;
    box-sizing: border-box;
}

.orderpage .prolist {
    /* max-height: 680rpx;
    overflow: scroll; */
    margin: 0 24rpx;
    margin-top: 10rpx;
    border-radius: 12rpx;
}

.proinfocon {
    display: flex;
    padding: 36rpx 30rpx;
    background-color: #fff;
    border-bottom: 1px solid #f7f7f7;
    box-sizing: border-box;
    border-radius: 12rpx;
}

.proimg-img {
    width: 186rpx;
    height: 186rpx;
    display: block;
}

.proinfocon .proinfo {
    flex-grow: 1;
    margin-left: 24rpx;
}

.proname {
    color: #242424;
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom:18rpx;
    /* margin: 0 auto 20rpx; */
}

.skuname {
    font-size: 22rpx;
    color: #666666;
    margin-bottom: 10rpx;
}

.proprice {
    color: #EC4543;
    margin-top: 38rpx;
}
.proprice text:first-child{
    font-size: 24rpx;
}
.proprice text:nth-child(2){
    font-size: 30rpx;
    margin-left: 6rpx;
    margin-right: 13rpx;
    display: inline-block;
}
.proprice text:last-child{
    color: #999999;
    font-size: 28rpx;
}

#pronav {
    height: 97rpx;
    line-height: 96rpx;

    display: flex;
    border-top: 1px solid #eee;
    position: fixed;
    width: 750rpx;
    bottom: 0;
    background-color: #fff;
    box-sizing: border-box;
    z-index: 99;
}

.nav-p {
    flex-grow: 1;
    text-align: center;
    color: #999;
}

.symbol {
    color: #EC4543;
}

.proprice {
    color: #EC4543;
    font-size: 36rpx;
}

.btnbuy {
    background-color: #E33F44;
    color: #fff;
    font-size: 32rpx;
}

.addexpress {
    width: 300rpx;
    height: 78rpx;
    display: block;
    text-align: center;
    border: 1px solid #aaa;
    border-radius: 5px;
    color: #333;
    font-size: 28rpx;
    margin: 60rpx auto;
    line-height: 78rpx;
}

.express {
    padding: 37rpx 30rpx;
    margin: 0 24rpx;
    box-sizing: border-box;
    margin-top: 20rpx;
    border-radius: 12rpx;
    background-color: #fff;
    font-size: 28rpx;
}
.express .left{
    float: left;
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
    vertical-align: middle;
}
.express .text{
    float: left;
    vertical-align: middle;
}
.express .text .name{
    margin-bottom: 20rpx;
}
.express .text .name text:first-child{
    color: #141414;
    font-size: 30rpx;
    display: inline-block;
    margin-right: 18rpx;
    font-weight: bold;
}
.express .text .name text:last-child{
    color: #666666;
    font-size: 28rpx;
}
.express .text .site{
    font-size: 24rpx;
    color: #666666;
}

