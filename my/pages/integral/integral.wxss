/* my/pages/integral/integral.wxss */
page{
  background-color: #F8F8F8;
}
.top_cont{
  height: 233rpx;
  width: 750rpx;
  font-size: 48rpx;
  line-height: 60rpx;
  text-align: center;
  box-sizing: border-box;
  padding-top: 40rpx;
  background: linear-gradient(to bottom,#ff373c,#ff9177,#f8f8f8);
  z-index: 0
}
.top_cont_cer{
  width: 697rpx;
height: 233rpx;
background: #ffffff;
border-radius: 13rpx;
margin:0 auto;
}
.top_cont_cer view:first-child{
  font-size: 67rpx;
padding-top: 64rpx;
font-family: Bahnschrift Regular, Bahnschrift Regular-Regular;
font-weight: 400;
}
.content{
  position: absolute;
  z-index: 1;
  left: 0rpx;
  top: 270rpx;
  width: 750rpx;
}
.top{
  display: flex;
  align-items: center;
  width:710rpx;
  height:150rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  margin: 0 auto;
}
.top .top_list{
  display: flex;
  align-items: center;
  width: 33%;
  text-align: center;
  justify-content: center;
  font-size: 36rpx;
  color: #FFC018;
}
.top .top_list image{
  width: 13rpx;
  height: 22rpx;
  margin-left: 20rpx;
}

.title_top{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #2C2C2C;
  margin: 20rpx;
  box-sizing: border-box;
  margin-top: 28rpx;
}
.title_top view{
  margin: 0 16rpx;
}
.title_top image{
  width: 32rpx;
  height: 26rpx;
}

.ContentArea {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left: 2.6%;
  padding-right: 2.6%;
  justify-content: space-between;
  margin-top: 27rpx;
}
.ContentArea .flex_list{
  width:350rpx;
  /* column-count:1 */
}

/* 授权按钮 */

.authorizationStatus {
  position: fixed;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background-color: transparent;
  top: 0rpx;
  margin-top: 0rpx;
}

.ContentArea .item {
  background-color: #fbfbfb;
  box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  /* align-items: center; */
  display: flex;
  flex-direction: column;
  padding-bottom: 15rpx;
}

.ContentArea .item image {
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  height: 350rpx;
}

.ContentArea .item .shopImageLeft {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.ContentArea .item .itemInfo {
  display: flex;
  flex-direction: column;
  padding-left: 2%;
  padding-right: 2%;
  margin-top: 20rpx;
}

.ContentArea .item .describe text {
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(116, 116, 116, 1);
  min-height: 40rpx;
}

.ContentArea .item .itemInfo .title {
  margin-bottom: 17rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(20, 20, 20, 1);
}

.ContentArea .item .itemInfo .title text {
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.price {
  display: flex;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(245, 0, 39, 1);
  margin-right: 14rpx;
  margin-top: 10rpx;
  display: flex;
justify-content: space-between;
align-items: center;
}



/* 生活服务 */
.content_list .item{
  width: 702rpx;
  height: 470rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  background: #fff;
  font-size: 30rpx;
  line-height: 30rpx;
  color: #333333;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.content_list .shopImageLeft image{
  width:702rpx;
  height:360rpx;
}
.content_list .itemInfo{
  padding: 14rpx;
}
.content_list .itemInfo .describe{
  font-size: 24rpx;
  color: #747474;
  margin-top: 14rpx;
  line-height: 24rpx;
}
.content_list .item .price{
  position: absolute;
  bottom: 16rpx;
  right: 10rpx;
}
