/* my/pages/orderlist/shopOrder/shopOrder.wxss */
page{
  background:#f8f8f8;
}
.hotelShop{
  width: 694rpx;
margin:0 auto;
background: #fff;
border-radius: 16rpx;
margin-top: 16rpx;
}
.hotelShop_header{
  padding: 24rpx 16rpx;
display: flex;
justify-content: space-between;
align-items: center;
position: relative;
}
.hotelShop_status{
  color:#ED2E2E;
  font-size: 26rpx;
  position: absolute;
right: 24rpx;
top: 20rpx
}
.hotelShop_status_active{
  color:#999;
}
.hotelShop_name{
  display: flex;
align-items: center;

}
.hotelShop_name image{
  width: 16rpx;
height: 26rpx;
margin-left: 5rpx;

}
.goodInfo{
  display: flex;
padding: 0 16rpx;
}
.goodinfo_image image{
  width: 220rpx;
height: 220rpx;
background: #ccc;
border-radius: 8rpx;

}
.goodinfo_text{
  margin-left: 16rpx;

}
.goodinfo_name{
  margin-top: 5rpx;
font-size: 30rpx;

}
.goodinfo_price{
  text-align: right;
margin-top: 42px;
color: #999;
font-size: 26rpx;

}
.commission{
  display: flex;
justify-content: space-between;
align-items: center;
margin: 0 15rpx;
margin-top: 21rpx;
border-bottom: 1px solid #eeeeee;
padding-bottom: 23rpx;
}
.commission_text{
  font-size: 26rpx;
}
.commission_price{
  font-size: 30rpx;
  color:#ED2E2E;
}
.paybtn{
  display: flex;
justify-content: flex-end;
padding: 23rpx 0;

}
.paybtn view{
margin-right: 16rpx;
background: #ed2e2e;
color: #fff;
padding: 6rpx 16rpx;
font-size: 24rpx;
border-radius: 24rpx;
}

.hotel_image image{
  width: 160rpx;
height: 158rpx;
background: #ccc;
border-radius: 8rpx;

}
.hotel{
  display: flex;
  padding: 0 16rpx;
  padding-bottom: 20rpx;
}
.hotel_text{
  margin-left: 24rpx;
font-size: 26rpx;
color: #999;

}
.hotel_text view{
margin-top: 10rpx;
}
.not{
  margin: 0 auto;
  text-align: center;
  margin-top: 200rpx;
}
.not image{
  width: 347rpx;
}

.matter .tabs {
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
}

.content .matter .tabs .tab {
  width: 50%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  color: #10141A;
  position: relative;
}

.content .matter .tabs .active::before {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 98rpx;
  height: 4rpx;
  background: #FF001C;
}