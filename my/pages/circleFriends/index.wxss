/* my/pages/circleFriends/index.wxss */
page{
  background: #f9f8f8;
}

.content .details{
  margin-top: 30rpx;
  padding: 0 36rpx;
}
.content .details .item{
  margin-bottom: 26rpx;
  width: 100%;
  background: white;
  border-radius: 20rpx;
}
.content .details .item .img{
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 24rpx;
  margin-left: 30rpx;
  padding: 36rpx 0;
}
.content .details .item image{
  width: 100%;
  height: 100%;
  
  border-radius: 50%;
}
.content .details .item .info{
  display: inline-block;
  vertical-align: middle;
  width: 74%;
}
.content .details .item .info .name{
  margin-bottom: 10rpx;
}
.content .details .item .info .name .left{
  font-weight: bold;
  font-size: 30rpx;
  color: #242424;  
  float: left;
}
.content .details .item .info .name .indirect_num{
  float: right;  
}
.content .details .item .info .name .indirect_num text{
  margin-right: 12rpx;
  font-size: 24rpx;            
}
.content .details .item .info .name .exist text{
  color: #E43F44;
}
.content .details .item .info .name .not text{
  color: #999999;
}
.content .details .item .info .name .indirect_num image{
  width: 12rpx;
  height: 20rpx;
  vertical-align: middle;
}

.content .details .item .info .num{
  margin-bottom: 10rpx;
  color: #666666;
  font-size: 24rpx;
}
.content .details .item .info .time{
  color: #666666;
  font-size: 24rpx;
}

.content .indirect{
  text-align: center;
  margin-top: 180rpx;
}
.indirect image{
  width: 347rpx;
}