/* my/pages/h5/h5.wxss */
.shop_bg {
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  z-index: 9999;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.shop_list {
  position: fixed;
height: 500rpx;
background: #fff;
width: 690rpx;
z-index: 9999;
top: 250rpx;
left: 30rpx;
border-radius: 20rpx;

}
.btn{
  display: flex;
position: absolute;
bottom: 0;
height: 80rpx;
width: 100%;
border-top: 1px solid #f8f8f8;

}
.btn view{
  flex: 1;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #f8f8f8;

}
.btn view:last-child{
  border-right: none;
color: #fff;
background: #E43F44;

}
.tip{
  width: 600rpx;
overflow: hidden;
margin: 0 auto;
margin-top: 30rpx;

}