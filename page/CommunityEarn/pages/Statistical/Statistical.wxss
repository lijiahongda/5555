.order-tab {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 25rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: center;
  color: #333333;
  line-height: 80rpx;
  display: flex;
}
.tab-list {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-list .active {
  color: #f7263c;
}
.tab-list .border-active {
  height: 4rpx;
  background-color: #ff001c;
  position: absolute;
  left: 30%;
  right: 30%;
  bottom: 0;
}
.empty-box {
  margin-top: 100rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}
.time-box {
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: center;
  background: #fff;
  margin: 7rpx 0;
}
.time-box-list {
  position: relative;
  height: 40rpx;
  display: flex;
  font-size: 23rpx;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx 15rpx;
  background: #f8f8f8;
  box-sizing: border-box;
}
.time-pos{
  position: absolute;
  z-index: 2;
  opacity: 1;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.time-box-list .under-img {
  width: 32rpx;
  height: 32rpx;
}
.time-box-label {
  margin: 0 9rpx;
  font-size: 23rpx;
}
.time-fl {
  margin-right: 8rpx;
}

.search-box {
  padding: 0 30rpx 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.search-box image {
  width: 31rpx;
  height: 31rpx;
}
.all-sy-box {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 108rpx;
  color: #999;
  font-size: 28rpx;
  margin-bottom: 7rpx;
}
.all-sy-box .active{
    color:#F7263C;
}
.data-box{
  margin-top: 30rpx;
}
.data-box .list{
  display: flex;
  margin: 0 27rpx;
  border-bottom: 1rpx solid #f8f8f8;
}
.data-box .list .fl{
  display: flex;
  flex: 1;
  line-height: 88rpx;
  justify-content: center;
}
.data-box .list .active{
  color:#F7263C;
}