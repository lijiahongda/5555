.list-label .hea {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 0 25rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f2f2f2;
}

.list-label-one {
  background: #fff;
  border-bottom: 1rpx solid #f2f2f2;
  padding: 5rpx 25rpx;
  box-sizing: border-box;
}
.list-label .hea .fl {
  display: flex;
  align-items: center;
}
.list-label .hea .fl image {
  width: 25rpx;
  height: 15rpx;
  margin-left: 21rpx;
}
.list-label .hea .fl .name {
  font-size: 25rpx;
  font-family: PingFang SC Regular, PingFang SC Regular-Regular;
  font-weight: 400;
  text-align: left;
  color: #242424;
}
.list-label .hea .fr {
  font-size: 23rpx;
  font-weight: 400;
  color: #999999;
  display: flex;
  align-items: center;
  letter-spacing: 1px;
}
.list-label .right-icon {
  width: 16rpx;
  height: 16rpx;
  display: block;
}
.list-label-one .tp {
  font-size: 25rpx;
  font-family: PingFang SC Regular, PingFang SC Regular-Regular;
  font-weight: 400;
  color: #242424;
  margin-bottom: 5rpx;
}
.list-label-one .bt {
  font-size: 23rpx;
  font-family: PingFang SC Regular, PingFang SC Regular-Regular;
  font-weight: 400;
  color: #999999;
}

.intro-box {
  width: 697rpx;
  font-size: 25rpx;
  background: #ffffff;
  margin: 10rpx auto;
  padding: 27rpx;
  box-sizing: border-box;
  box-shadow: 1rpx 4rpx 16rpx 4rpx rgba(0,0,0,0.08); 
  line-height: 40rpx;
}

.intro-box .title{
  color: #F7263C;
}
.intro-box .bot-wrap{
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
  font-size: 23rpx;
  color:#5096F7;
}
.intro-box .bot-wrap image{
  width: 22rpx;
  height: 22rpx;
  display: inline-block;
  margin-right: 14rpx;
}
.intro-box .bot-wrap .txt{
  display: inline-block;
}