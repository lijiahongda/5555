.bgw {
  background: #fff;
}
.order-tab {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 25rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: center;
  color: #333333;
  line-height: 80rpx;
  display: flex;
}
.tab-list {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-list .active {
  color: #f7263c;
}
.tab-list .border-active {
  height: 4rpx;
  background-color: #ff001c;
  position: absolute;
  left: 30%;
  right: 30%;
  bottom: 0;
}
.empty-box {
  margin-top: 100rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}
