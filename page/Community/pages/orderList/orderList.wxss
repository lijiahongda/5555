.bgw{
  background: #fff;
}
.order-tab{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: center;
  color: #333333;
  line-height: 80rpx;
  display: flex;
}
.tab-list{
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tab-list .active{
  color:#FF001C;
}

.tab-list .border-active{
  height: 4rpx ;
  background-color: #FF001C;
  position: absolute;
  left: 30%;
  right: 30%;
  bottom: 0;
}
.order-nav{
  display: flex;
  height: 88rpx;
}
.order-nav-list{
  flex: 1;
  display: flex;
  line-height: 88rpx;
  justify-content: center;
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  color: #141f33;
}
.order-nav .active{
  color:#FF001C;
}

.time-box{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 88rpx;
    font-size: 30rpx;
    font-family: PingFangSC, PingFangSC-Medium;
    font-weight: 500;
    text-align: center;

}
.time-box .icon{
  width: 24rpx;
  height: 24rpx;
  display: block;
}
.fixed-time-box{
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 100000;
  background-color: #ffffff;
}
.mc{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: #000;
  opacity: 0.6;
  height: 100%;
  width: 100%;
  z-index:99999
}
.time-box-hea{
  height: 88rpx;
  display: flex;
  padding: 0 20rpx;
  color: #333;
  justify-content: space-between;
  background: #fff;
  border-bottom: 2rpx solid #f8f8f8;
}
.list-label{
  line-height: 88rpx;
  font-size: 28rpx;
}
.time-box-hea-c{
  color:#FF001C;
}
.order-main-list{
  margin: 0 28rpx;
  padding: 24rpx 16rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;

}
.label-list{
  display: flex;
  font-size: 26rpx;
  color: #999999;
  margin: 0 0 5rpx 0;
  border-radius: 16rpx;
}
.label-list .copy{
  width: 32rpx;
  height: 32rpx;
}

.label-list .intro{
  display: flex;
}
.blue-text{
  color: #006CFA;
  margin: 0 10rpx 0 0;
}
.sp-list{
  overflow: hidden;
  position: relative;
}
.sp-list-fl{
  float: left;
  width: 220rpx;
  height: 220rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sp-list-fl .icon{
  width: 100%;
  background:#f7f7f7;
}

.sp-list-fr{
  padding-left: 230rpx;
  font-size: 26rpx;
}
.price-js{
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 26rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #141414;
}
.lbel-bottom{
  display: flex;
}
.lbel-bottom-list{
  display: flex;
  align-items: center;
  flex: 1;
}
.lbel-bottom-list-fl{
  font-size: 26rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #141414;
}
.lbel-bottom-list-fr{
  justify-content: flex-end;
  display: flex;
  font-size: 36rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  color: #ed2e2e;
}
.empty-box{
  text-align: center;
  margin: 40rpx 0 0 0;
  font-size: 24rpx;
}
.lhs{
  font-size: 26rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
}