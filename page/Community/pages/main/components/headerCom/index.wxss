.zheader{
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  position: relative;  
  /* z-index: -1;   */
  /* background: url('../../../../image/headerbg.png'); */
  background-size: 100%;
  box-sizing: border-box;
  /* padding-top: 115rpx; */
}

.zheader>.bgimg{
  position: absolute;
  width: 100%;
  height: 320rpx;
  z-index: 0;
  top: 0;
  left: 0;
}

