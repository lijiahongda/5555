.user>.msg>.isVip{
  width: 156rpx;
  height: 44rpx;
  background:rgba(4,3,3,1);
  border-radius:22rpx;
  /* margin-top: 10rpx; */
  display: flex;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height: 44rpx;
}

.user>.msg>.isVip>.iconImg{
  width: 24rpx;
  height: 24rpx;
  margin-top: 10rpx;
  margin-left: 17rpx;
  margin-right: 5rpx;
}

.user>.msg>.isVip>.iconImg>image{
  width: 100%;
  height: 100%;
  display: block;
}


.user>.tips{
  height: 80rpx;
  line-height: 80rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-right: 40rpx;
}

.user>.copyBt{
  width: 132rpx;
  height: 58rpx;
  /* background:rgba(187,187,187,1); */
  border-radius:8rpx;
  text-align: center;
  line-height: 58rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  border:1px solid rgba(221,221,221,1);
  margin-top: 10rpx;
}
.click{
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}
.none{
  width: 100%;
  color: #999;
  text-align: center;
  font-size: 24rpx;
  /* margin-top: 40rpx; */
}