/* page/community/pages/main/group/activation/components/gpeople/index.wxss */
.peopleList{
  width: 100%;
  /* height: 200rpx; */
  background: #fff;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  /* margin-bottom:50rpx; */

}

.peopleList>.title{
  width: 702rpx;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
}

.peopleList>.title>.ctrl{
  display: flex;
}

.peopleList>.title>.ctrl>view>image{
  width: 40rpx;
  height: 40rpx;
}

.peopleList>.readioCtrl{
  width: 702rpx;
  height: 100rpx;
  border-bottom: 2rpx solid rgba(238,238,238,1);
  margin:0 auto;
  display: flex;
}

.peopleList>.readioCtrl>.redioBt{
  display: flex;
  line-height: 44rpx;
  margin-right: 90rpx;
}

.peopleList>.readioCtrl>.redioBt>.clr{
  width:44rpx;
  height:44rpx;
  border:2rpx solid rgba(221,221,221,1);
  border-radius:50%;
}

.peopleList>.readioCtrl>.redioBt>.vip{
  width:44rpx;
  height:44rpx;
  background:rgba(249,226,174,1);
  border-radius:50%;
  border:2rpx solid rgb(255, 255, 255);
}

.peopleList>.readioCtrl>.redioBt>view:nth-child(2){
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(27,23,22,1);
  margin-left: 20rpx;
  transition: all ease 0.2s;
}


.user{
  /* width: 100%; */
  height: 85rpx;
  display: flex;
  justify-content:space-between;
  margin: 0 20rpx;
  margin-top: 30rpx;
}
.user:last-child{
  margin-bottom: 30rpx;
}
.user:nth-child(1){
  padding-top: 30rpx;
}
.user>.cover{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 10rpx;
}

.user>.cover>image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.user>.msg{
  width: 300rpx;
  height: 80rpx;
}

.user>.msg>.name{
  width: 100%;
  height: 40rpx;
  line-height: 30rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(20,20,20,1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

