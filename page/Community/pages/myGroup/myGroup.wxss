page{
  min-height: 100%;
  background: #F9F9F9;
}
.q-desc{
  padding: 0 31rpx;
  box-sizing: border-box;
  line-height: 88rpx;
  font-size: 28rpx;
  font-family: PingFang SC Regular, PingFang SC Regular-Regular;
  font-weight: 400;

  color: #101011;
}
.header{
  width: 100%;
  height: 108rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header > view{
  width: 270rpx;
  height: 66rpx;
  border-radius: 33rpx;
  text-align: center;
  line-height: 66rpx;
  color: #999999;
  font-size: 28rpx;
  position: relative;
  background: #F3F3F3;
}
.header > view.active:nth-child(1){
  background: #20AC16;
  margin-right: -50rpx;
  z-index: 1;
  color: #fff;
}
.header > view.active:nth-child(2){
  background: #20AC16;
  margin-left: -50rpx;
  z-index: 1;
  color: #fff;
}
.tip{
  width: 100%;
  height:86rpx;
  text-align: center;
  line-height: 86rpx;
  font-size: 26rpx;
  color: #999999;
}
.list-par{
  background-color: #fff;
}
.list{
  height: 139rpx;
  margin: 0 31rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-bottom: 2rpx solid #e8e8e8;
}
.r-sh{
  color: #999999;
}
.list .left{
  width: 520rpx;
  color: #333333;
  font-size: 28rpx;
}
.list .left > view{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list .left > view:nth-child(2){
  color: #999999;
  font-size: 26rpx;
  margin-top: 8rpx;
}
.list .right{
  color: #20AC16;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.list .right image{
  width: 30rpx;
  height: 44rpx;
  margin-left: 10rpx;
}
.list .rightButton{
  width: 120rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  background: rgba(32,172,22,1);
  border-radius: 30rpx;
}
.tip{
  padding-left: 30rpx;
  color: #333;
  font-size: 24rpx;
  text-align: left;
  padding-top: 10rpx;
}
.add{
  width: 697rpx;
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background: #e33f44;
  border-radius: 13rpx;
  margin: 0 auto;
}
.content{
  width:690rpx;
  min-height:627rpx;
  background:rgba(255,255,255,1);
  border-radius:10rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: 30rpx;
}
.content .title{
  color: #333333;
  font-size: 34rpx;
}
.content .desc{
  color: #333333;
  font-size: 30rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
}
.left-bot-box{
  display: flex;
  align-items: center;
}
.kt-box-zl{
  width: 163rpx;
  height: 33rpx;
  background: #52af35;
  color: #fff;
  line-height: 33rpx;
  text-align: center;
  border-radius: 7rpx;
  font-size: 22rpx;
  margin-left: 34rpx;
}