/* page/payment/payMain/index.wxss */
page{
  width: 100%;
  height: 100%;
}
.zcontent{
  width: 100%;
  height: 100%;
}
.zcontent>.money{
  width: 100%;
  background: #fff;
}
.zcontent>.money>.moneyNum{
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}
.zcontent>.money>.moneyNum>.moneyNtitle{
  text-align: center;
  margin-top: 62rpx;
  font-size:26rpx;
  line-height: 26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.zcontent>.money>.moneyNum>.moneyNnum{
  margin-top: 29rpx;
  text-align: center;
  font-size:68rpx;
  line-height: 68rpx;
  font-family:PingFang SC;
  font-weight:600;
  color:rgba(202,37,25,1);
  margin-bottom: 100rpx;
}
.zcontent>.money>.moneyCtrl{
  padding: 0 25rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.zcontent>.money>.moneyCtrl>.btList{
  width: 220rpx;
  height: 157rpx;
  border:2rpx solid rgba(221,221,221,1);
  border-radius:16rpx;
  position: relative;
  overflow: hidden;
}
.zcontent>.money>.moneyCtrl>.btList>.tips{
  width: 142rpx;
  height: 40rpx;
  border-radius: 0rpx 0rpx 0rpx 16rpx;
  /* background: #bbb; */
  position: absolute;
  top: 0;
  right: 0;
  text-align: center;
  line-height: 38rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  overflow: hidden;
}
.zcontent>.money>.moneyCtrl>.btList>.tips>image{
  width: 100%;
  height: 100%;
}
.zcontent>.money>.moneyCtrl>.btList>.fMoney{
  margin-top: 40rpx;
  text-align: center;
  font-size:40rpx;
  line-height: 40rpx;
  font-family:PingFang SC;
  font-weight:600;
  color:rgba(2,2,2,1);
}
.zcontent>.money>.moneyCtrl>.btList>.fMoney .unit{
  font-size: 28rpx;
}
.zcontent>.money>.moneyCtrl>.btList>.tMoney{
  text-align: center;
  font-size:26rpx;
  line-height: 26rpx;
  margin-top: 10rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.zcontent>.money>.moneyCtrl>.btList>.otherText{
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(2,2,2,1);
  line-height: 157rpx;
  text-align: center;
}
.zcontent>.money>.payBt{
  width:702rpx;
  height:88rpx;
  background:rgba(202,37,25,1);
  border-radius:16rpx;
  margin:0 auto;
  text-align: center;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height: 88rpx;
  margin-top: 43rpx;
}
.zcontent>.money>.payWord{
  text-align: center;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(2,2,2,1);
  line-height: 26rpx;
  margin-top: 39rpx;
  padding-bottom: 31rpx;
}
.zcontent>.money>.payWord>text{
  color: #CA2519;
}
.zcontent>.hrefList{
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
}
.zcontent>.hrefList>.list{
  width: 702rpx;
  height: 107rpx;
  margin: 0 auto;
  border-bottom: 2rpx solid rgba(238,238,238,1);
  display: flex;
  justify-content: space-between;
  line-height: 107rpx;
}
.zcontent>.hrefList>.list>.name{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(20,20,20,1);
}
.zcontent>.hrefList>.list>.icon{
  font-size:25rpx;
  font-family:PingFang SC;
  color:rgba(187,187,187,1);
}
.alert{
  width:100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1;
}