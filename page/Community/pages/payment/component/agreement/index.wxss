@import "/utils/iconfont/iconfont.wxss";
/* page/payment/component/code/index.wxss */
.codeAlert{
  width: 600rpx;
  height: 700rpx;
  background:rgba(255,255,255,1);
  border-radius:16rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 10;
}
.codeAlert>.text{
  width: 100%;
  font-size:32rpx;
  text-align: center;
  line-height: 32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(20,20,20,1);
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}
.codeAlert>.contentText{
  width: 520rpx;
  height: 480rpx;
  margin: 0 auto;
  padding-bottom: 30rpx;
  overflow-x: hidden;
}
.codeAlert>.contentText>textarea{
  width: 100%;
  height: 100%;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(20,20,20,1);
}
.codeAlert>.close{
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  position: absolute;
  left: 50%;
  top: 110%;
  transform: translate(-50%,-50%)
}
.codeAlert>.close>image{
  width:100%;
  height: 100%;
}
.codeAlert>.inputCode{
  width: 518rpx;
  height: 80rpx;
  border-bottom: 2rpx solid rgba(221,221,221,1);
  margin: 0 auto;
  box-sizing: border-box;
  margin-bottom:20rpx;
}
.codeAlert>.inputCode>input{
  text-align: center;
  width: 100%;
  height: 100%;
  line-height: 80rpx;
  font-size:26rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(20,20,20,1);
}
.codeAlert>.sText{
  text-align: center;
  line-height: 24rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-bottom: 92rpx;
  margin-top: 60rpx;
}
.codeAlert>.alertBt{
  width:518rpx;
  height:86rpx;
  background:rgba(202,37,25,1);
  text-align: center;
  line-height: 86rpx;
  border-radius:16rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  margin: 0 auto;
  margin-top: 60rpx;
}