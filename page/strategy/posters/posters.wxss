.list{
  width: 100%;
  height: auto;
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx 50rpx;
  box-sizing: border-box;
}
.list .header{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  color: #333333;
  font-size: 26rpx;
}
.list .header image{
  width: 80rpx;
  height: 100%;
  border-radius: 50%;
  margin-right: 20rpx;
}
.list .detail{
  width: 100%;
  height: auto;
  padding-top: 30rpx;
  display: flex;
}
.list .left{
  width: 480rpx;
  height: auto;
}
.list .left .desc{
  color: #333333;
  font-size: 24rpx;
}
.list .left .tag{
  color: #FF033B;
  font-size: 24rpx;
  margin: 30rpx auto 20rpx auto;
}
.list .left image{
  width: 330rpx;
  border-radius: 10rpx;
}
.list .copy{
  width: 140rpx;
  height: 48rpx;
  border-radius: 24rpx;
  border: 2rpx solid #FF033B;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FF033B;
  font-size: 26rpx;
}
.showPosterImg{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
}
.showPosterImg > image{
  width: 70%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}