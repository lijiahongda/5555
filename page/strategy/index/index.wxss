@import '../../../utils/iconfont/iconfont.wxss';

page {
  background: #f6f6f6;
  min-height: 100%;
  padding-top: 88rpx;
  box-sizing: border-box;
}

.popup {
  width: 65%;
  height: 654rpx;
  border-radius: 20rpx;
  background-color: #fff;
  position: fixed;
  top: 20%;
  left: 17.5%;
  z-index: 10000;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.popup .title {
  font-size: 30rpx;
  font-family: PingFang SC Regular, PingFang SC Regular-Regular;
  font-weight: 400;
  text-align: center;
  color: #141414;
}

.popup image {
  width: 250rpx;
  height: 250rpx;
  background-color: rosybrown;
  margin-top: 48rpx;
}

.Mask {
  background-color: rgba(20, 20, 20, 0.5);
  position: fixed;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 9000;
}

.NewHands {
  padding-left: 5.3%;
  padding-right: 5.3%;
  width: 100%;
  margin-bottom: 200rpx;
  box-sizing: border-box;
}

.NewHands swiper {
  height: 300rpx;
  background-color: #fff;
  margin-bottom: 30rpx
}

.NewHands swiper image {
  width: 100%;
  border-radius: 10rpx;
}

.NewHands .NewHandsList {
  background-color: #fff;
  border-radius: 10rpx;
  padding-top: 38rpx;
  padding-bottom: 51rpx;
  padding-left: 21rpx;
  padding-right: 21rpx;
  margin-bottom: 27rpx;
}

.NewHands .NewHandsList .title {
  font-size: 30rpx;
  font-family: PingFang SC Medium, PingFang SC Medium-Medium;
  font-weight: 500;
  text-align: left;
  color: #242424;
  margin-bottom: 31rpx;
}

.NewHands .NewHandsList .fun {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  font-family: PingFang SC Regular, PingFang SC Regular-Regular;
  font-weight: 400;
  text-align: left;
  color: #e33f44;
  margin-top: 31rpx;
  width: 100%;
}

.NewHands .NewHandsList .fun .button {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.NewHands .NewHandsList .fun .button .buItem {
  height: 60rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
  margin-right: 20rpx;
  background: #e33f44;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-family: PingFang SC Regular, PingFang SC Regular-Regular;
  font-weight: 400;
  text-align: left;
  color: #ffffff;
  text-align: center;
  line-height: 60rpx;

}

.NewHands .NewHandsList .fun .video {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  width: 44%;
}

.NewHands .NewHandsList .fun .video image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 2%;
}

.tab {
  width: 100%;
  height: 88rpx;
  padding: 0 56rpx;
  box-sizing: border-box;
  color: #999999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
  border-bottom: 2rpx solid #f7f7f7;
}

.tab>view {
  height: 100%;
  line-height: 88rpx;
}

.tab .active {
  color: #E4311F;
  font-size: 30rpx;
  position: relative;
}

.tab .active::after {
  content: ' ';
  width: 50rpx;
  height: 5rpx;
  background: #E4311F;
  border-radius: 3rpx;
  position: absolute;
  bottom: 11rpx;
  left: 50%;
  margin-left: -25rpx;
}

.hide {
  display: none;
}

.scontent {
  width: 100%;
  margin-top: 30rpx;
}

.footer {
  width: 100%;
  padding-left: 5.3%;
  padding-right: 5.3%;
  position: fixed;
  bottom: 10rpx;
  left: 0;
  z-index: 2;
  box-sizing: border-box;
}


.footer>.groupZ {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(20, 20, 20, 1);
  line-height: 60rpx;
  height: 100rpx;
  background: #E33F44;
  border-radius: 10rpx;
  font-size: 31rpx;
  font-family: PingFang SC Regular, PingFang SC Regular-Regular;
  font-weight: 400;
  text-align: left;
  color: #ffffff;
  line-height: 100rpx;
  text-align: center;
}

.zzc {
  width: 100%;
  height: 90%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  /* background: red; */
}