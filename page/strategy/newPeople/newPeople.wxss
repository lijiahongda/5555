.list{
  width: 690rpx;
  height: auto;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  border-radius:10rpx;
  margin: 0rpx auto;
  background: #fff;
}
.list .title{
  font-size: 28rpx;
  color: #333333;
  line-height: 1;
  font-weight:500;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.list .desc{
  margin: 20rpx 0;
}
.list .footer{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.list .button{
  height:48rpx;
  line-height: 48rpx;
  background:linear-gradient(-83deg,rgba(255,81,24,1) 0%,rgba(255,0,60,1) 100%);
  border-radius:24rpx;
  padding: 0 10rpx;
  color: #fff;
  font-size: 26rpx;
  margin: 0;
}
.list .button.black{

}
.list .video{
  width: 200rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #FF033B;
  font-size: 24rpx;
}
.list .video image{
  width: 21rpx;
  height: 26rpx;
  margin-right: 9rpx;
}
.list .gray{
  background: #eee;
  color: #333;
}


.list>.title{
  width: 100%;
  display: flex;
  margin-left: -30rpx;
  /* margin-top: 30rpx; */
}

.list .title .num{
  width: 86rpx;
  height: 68rpx;
  border-radius: 50%;
  background:rgba(255,255,255,1);
  border:4rpx solid rgba(255,64,66,1);
  line-height: 68rpx;
  text-align: center;
  font-size:42rpx;
  font-family:DIN Alternate;
  font-weight:bold;
  color:rgba(255,52,71,1);
  position: relative;
  z-index: 1;
}

.list .title .text{
  max-width: 550rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 20rpx;
  height: 60rpx;
  margin-left: -20rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:60rpx;
  text-indent: 20rpx;
  margin-top: 8rpx;
  background:linear-gradient(90deg,rgba(255,51,71,1),rgba(254,98,51,1));
  box-shadow:0px 5px 15px 0px rgba(255,53,70,0.3);
  border-radius:0px 30px 30px 0px;
}

.phoneImg{
  width: 100%;
  height: 800rpx;
}

.phoneImg>image{
  width: 100%;
  height: 100%;
}