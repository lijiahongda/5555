
page {
  background-color: #fff;
}

.box_shadow {
  height: 1px;
  box-shadow: 0px 2px 16px 1px rgba(0, 0, 0, 0.14);
  width: 100%;
}

.Driver_info {
  margin-top: 40rpx;
  margin-left: 3.2%;
  margin-right: 3.2%;
  padding-left: 4%;
  padding-right: 4%;
  width: 73.6%;
  border-radius: 90rpx 88rpx 88rpx 10rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0px 5rpx 10rpx 0px rgba(197, 196, 196, 0.49);
  height: 88rpx;
  margin-bottom: 22rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.Driver_info .Driver_name {
  margin-right: 41rpx;
}

.Driver_info .Driver_price text {
  font-size: 48rpx;
  font-family: DIN Condensed;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-right: 8rpx;
}

.Driver_info .Driver_call {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.Driver_info .Driver_call image {
  width: 15rpx;
  height: 15rpx;
  margin-right: 13rpx;
}

.Driver_info .info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.Rating_star {
  margin-left: 3.2%;
  margin-right: 3.2%;
  padding-left: 4%;
  padding-right: 4%;
  border-radius: 10rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0px 5rpx 10rpx 0px rgba(197, 196, 196, 0.49);
  margin-bottom: 20rpx;
  padding-top: 40rpx;
  padding-bottom: 32rpx;
}

.Rating_tips {
  display: flex;
  flex-direction: column;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #ddd;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  width: 100%;
  margin-bottom: 31rpx;
}
.Rating_tips .tips{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 36rpx;
}
.Rating_star .anonymous {
  width: 70rpx;
  height: 36rpx;
  background: rgba(241, 241, 241, 1);
  border: 1px solid rgba(162, 162, 162, 1);
  border-radius: 4rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-left: 22rpx;
}

.Rating_star .Rating_title {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 31rpx;
  width: 100%;
}

.stars {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.stars image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 30rpx;
}

.Rating_content {
  margin-left: 3.2%;
  margin-right: 3.2%;
  padding-left: 4%;
  padding-right: 4%;
  border-radius: 10rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0px 5rpx 10rpx 0px rgba(197, 196, 196, 0.49);
  padding-top: 30rpx;
  padding-bottom: 31rpx;
}

textarea {
  border: 1px solid #999;
  width: 94%;
  padding-left: 3%;
  padding-right: 3%;
  height: 190rpx;
  margin-bottom: 41rpx;
  padding-top: 33rpx;
  padding-bottom: 33rpx;
}

.operation {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  width: 100%;
}

.operation view {
  width: 200rpx;
  height: 80rpx;
  border: 1px solid rgba(153, 153, 153, 1);
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.Cancellation_Success {
  margin-top: 40rpx;
  margin-left: 3.2%;
  margin-right: 3.2%;
  padding-left: 4%;
  padding-right: 4%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 5rpx 10rpx 0px rgba(197, 196, 196, 0.49);
  padding-top: 40rpx;
  padding-bottom: 60rpx;
}

.Cancellation_Success .Cancellation_time {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 29rpx;
}

.Cancellation_Success .Cancellation_time image {
  margin-right: 21rpx;
  width: 22rpx;
  height: 22rpx;
}

.Cancellation_Success .list {
  border-bottom: 1px solid #ddd;
  padding-bottom: 8rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 55rpx;
}

.Cancellation_Success .list .item {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 24rpx;
}

.Cancellation_Success .list .item .raido {
  width: 14rpx;
  height: 14rpx;
  background: rgba(77, 173, 56, 1);
  border-radius: 50%;
  margin-right: 26rpx;
}

.Cancellation_Success .Cancellation_tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.Cancellation_Success .Cancellation_tips image {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 39rpx;
}