.tab_h {
  height: 85rpx;
  width: 100%;
  box-sizing: border-box;
  line-height: 95rpx;
  background: #fff;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  white-space: nowrap;
  z-index: 99;
  display: flex;
  flex-direction: row;
  margin-bottom: 50rpx;
}

.tab_h .tab_item {
  margin: 0 6%;
  display: inline-block;
  text-align: center;
  position: relative;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(155, 155, 155, 1);
}

.tab_h.tab_item.active {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.tab_h .tab_item.active:after {
  content: "";
  display: block;
  height: 4rpx;
  width: 40%;
  left: 30%;
  background: #4dad38;
  position: absolute;
  bottom: 0;
}

