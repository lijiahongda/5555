
page {
  background-color: #fff;
}

.box_shadow {
  height: 1px;
  box-shadow: 0px 2px 16px 1px rgba(0, 0, 0, 0.14);
  width: 100%;
}

.content {
  padding-left: 17%;
  padding-right: 17%;
  margin-top: 49rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.content .Vehicle_type {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-bottom: 20rpx;
}

.content .Vehicle_time {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.content .type {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 49rpx;
  margin-bottom: 39rpx;
}

.content .type image {
  width: 159rpx;
  height: 1rpx;
}

.content .type view {
  margin-left: 33rpx;
  margin-right: 33rpx;
}

.content .list {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.content .list .item {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
}

.content .list .item .top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 17rpx;
}

.content .list .item .top .title {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.content .list .item .top .price {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.content .list .item .center {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.content .list .item .bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 21rpx;
}

.Dividing_line {
  width: 100%;
  height: 1rpx;
  margin-bottom: 47rpx;
}

.Amount_money {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 30rpx;
}

.Amount_money text {
  font-size: 42rpx;
}

.tips {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(77, 173, 56, 1);
  margin-bottom: 49rpx;
}

.Valuation_Rules {
  width: 224rpx;
  height: 68rpx;
  border: 1px solid rgba(221, 221, 221, 1);
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}
