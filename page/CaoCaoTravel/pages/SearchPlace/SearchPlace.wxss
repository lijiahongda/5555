
page {
  background-color: #fff;
}

.heard {
  display: flex;
  flex-direction: row;
  height: 93rpx;
  width: 92%;
  padding-left: 4%;
  padding-right: 4%;
  background-color: #fff;
  box-shadow: 0px 2px 16px 1px rgba(0, 0, 0, 0.14);
  align-items: center;
  justify-content: center;
}

.heard .Loc {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(111, 111, 117, 1);
  border-right: 1px solid #f2f2f2;
  height: 40rpx;
  width: 20%;
}

.heard .Loc image {
  margin-left: 17rpx;
  width: 18rpx;
  height: 13rpx;
}

.heard .Loc text {
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.heard .Loc .place {
  width: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.heard input {
  width: 67%;
  padding-left: 5%;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(204, 204, 204, 1);
}

.heard .cancel {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(111, 111, 117, 1);
}

.list {
  padding-left: 4%;
  padding-right: 4%;
  height: 107rpx;
  border-bottom: 1px solid #f2f2f2;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.list image {
  width: 31rpx;
  height: 31rpx;
  margin-right: 29rpx;
}

.list .item {
  display: flex;
  flex-direction: column;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.list .item .name {
  margin-bottom: 4rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 640rpx;
}

.list .item .detail text {
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
